# Stock Tracker Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Stock Tracking
# =============================================================================

# Comma-separated list of stock symbols to track
STOCK_SYMBOLS=AAPL,NVDA,MSFT

# Percentage change threshold to trigger alerts (e.g., 1.5 = 1.5%)
PRICE_THRESHOLD=1.5

# =============================================================================
# Notifications
# =============================================================================

# Notification channel: console, email, sms
NOTIFICATION_CHANNEL=console

# Email settings (required if NOTIFICATION_CHANNEL=email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFY_EMAIL=recipient@email.com

# SMS settings (required if NOTIFICATION_CHANNEL=sms) - v0.2
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_FROM_NUMBER=+1234567890
# NOTIFY_PHONE=+1234567890

# =============================================================================
# Local LLM
# =============================================================================

# Ollama model to use for explanations
OLLAMA_MODEL=mistral:7b

# Ollama host (default: http://localhost:11434)
OLLAMA_HOST=http://localhost:11434

# =============================================================================
# Storage
# =============================================================================

# Directory for local data storage
DATA_DIR=./data

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

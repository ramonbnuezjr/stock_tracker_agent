# Stock Tracker Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Stock Tracking
# =============================================================================

# Comma-separated list of stock symbols to track
STOCK_SYMBOLS=AAPL,NVDA,MSFT

# Percentage change threshold to trigger alerts (e.g., 1.5 = 1.5%)
PRICE_THRESHOLD=1.5

# =============================================================================
# Notifications
# =============================================================================

# Notification channel: auto, sms, apple_messages, email, email_sms, console
#   auto         = Automatic: Twilio → Apple Messages → Console (recommended)
#   sms          = Twilio SMS (requires ENABLE_TWILIO=true)
#   apple_messages = macOS Messages app (local Mac only)
#   email        = Email notifications
#   email_sms    = Email-to-SMS via carrier gateway
#   console      = Console output only
NOTIFICATION_CHANNEL=auto

# =============================================================================
# Twilio SMS (Primary)
# =============================================================================

# Enable Twilio as primary SMS channel
ENABLE_TWILIO=true

# Twilio credentials (get from https://console.twilio.com)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Your phone number to receive notifications
NOTIFY_PHONE=+15551234567

# =============================================================================
# Email Settings (for email or email_sms channels)
# =============================================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFY_EMAIL=recipient@email.com

# Email-to-SMS carrier (for email_sms channel only)
# Supported: att, verizon, tmobile, sprint, boost, cricket, uscellular, virgin, metro
SMS_CARRIER=att

# =============================================================================
# Local LLM
# =============================================================================

# Ollama model to use for explanations
OLLAMA_MODEL=mistral:7b

# Ollama host (default: http://localhost:11434)
OLLAMA_HOST=http://localhost:11434

# =============================================================================
# Storage
# =============================================================================

# Directory for local data storage
DATA_DIR=./data

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
